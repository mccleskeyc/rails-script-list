<h1><%= "#{@department.name}" if @department %> Scripts</h1>
<table>
    <tr>
        <th>Title</th>
        <th>Logline</th>
        <th>Format</th>
    </tr>

    <tr>
    <% @scripts.each do |script| %>
        <td><%= link_to script.title, script_path(script), :class => "link_to_style" %></td>
        <td><%= script.logline %></td>
        <td><%= script.department_name %></td>
    </tr>
    <% end %>
</table>

<%= button_to "Add a Script", new_script_path, :method => "get" %>
<%= button_to "See Scripts with Shortest Loglines", loglines_path, :method => "get" %>
